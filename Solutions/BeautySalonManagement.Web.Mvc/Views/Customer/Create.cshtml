@model BeautySalonManagement.Web.Mvc.Controllers.ViewModels.CustomerViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
	Html.EnableClientValidation();
}

<h2>Create</h2>

@using(Html.BeginForm())
{
	@Html.AntiForgeryToken()
    @Html.ValidationSummary()
	<ul>
		@Html.Partial("People/Edit",Model)
		<li>
			@Html.LabelFor(x=>x.CustomerCardNo)
			<div>
				@Html.TextBoxFor(x => x.CustomerCardNo)
			</div>
		</li>
	</ul>
    @Html.SubmitButton()
}