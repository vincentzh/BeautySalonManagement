@model BeautySalonManagement.Web.Mvc.Controllers.ViewModels.CustomerViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
	Html.EnableClientValidation();
}

<h2>Create</h2>

@using(Html.BeginForm())
{
	@Html.AntiForgeryToken()
    @Html.ValidationSummary()
		<div class="control-group">
			@Html.LabelFor(x=>x.CustomerCardNo)
            @Html.TextBoxFor(x => x.CustomerCardNo)
		</div>
		@Html.Partial("People/Edit", Model)
         @Html.Partial("People/Password", Model)
		<div class="control-group">
			@Html.SubmitButton("Create", "保存", new { @class = "btn btn-primary" }) @(Html.ActionLink<CustomerController>(x => x.Index(null, null), "取消", new { @class = "btn" }))</div>
}