@model BeautySalonManagement.Web.Mvc.Controllers.ViewModels.EquipmentViewModel

@{
	ViewBag.Title = "新增器械";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>新增器械</h2>
@using(Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Partial("DisplayTemplates/BootstrapErrorSummary")
	<div class="control-group">
		
	
		@Html.LabelFor(equipment=> equipment.Name)
		@Html.TextBoxFor(equipment => equipment.Name)
		@Html.ValidationMessageFor(equipment => equipment.Name)
	</div>
	<div class="control-group">
		@Html.LabelFor(equipment => equipment.Description)
		@Html.TextBoxFor(equipment => equipment.Description)
		@Html.ValidationMessageFor(equipment => equipment.Description)
	</div>
    <div class="control-group">
    @Html.SubmitButton("Save", "保存", new { @class = "btn btn-primary" }) @(Html.ActionLink<EquipmentController>(x => x.Index(null, null), "取消", new { @class = "btn" }))</div>
}